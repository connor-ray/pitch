<div class="container">
  <form action='/pitches' method='post'>
    <div>
    Pitch Title: <input type="text" name="pitch[title]" placeholder="Pitch Title">
    </div>

    <div>
    Event Start-Time: <input type="datetime-local" name="pitch[start_time]">
    </div>

    <div>
    Deadline for Voting: <input type="datetime-local" name="pitch[deadline]">
    </div>

    <div>
    <input type="hidden" name="pitch[groupchat_id]" value="<%= @groupchat.id %>">
    <input type="submit" value="submit">
    </div>
  </form>

  <% if @error %>
    <%= @error %>
  <% end %>

</div>