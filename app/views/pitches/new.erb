<div class="container">
  <form action='/pitches/new' method='post'>
    <div>
    Pitch Title: <input type="text" name="title" placeholder="Pitch Title">
    </div>

    <div>
    Event Start-Time: <input type="datetime-local" name="start_time">
    </div>

    <div>
    Deadline for Voting: <input type="datetime-local" name="deadline">
    </div>
    
    <div>
    <input type="submit" value="submit">
    </div>
  </form>

  <% if @error %>
    <%= @error %>
  <% end %>

</div>